@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <header class="hero-section">
        <div class="container d-flex justify-content-between gap-5">
            <div class="hero-content">
                <h1 class="display-3 fw-bold">Find the Best Freelancers for Your Project</h1>
                <p class="lead">Connect with top freelancers from around the world and bring your ideas to life!</p>
                <a href="/User/SignUp?role=client" class="btn btn-lg btn-primary">Join Now</a>
                <a href="/User/SignUp?role=freelancer" class="btn btn-lg btn-secondary">Become a Freelancer</a>
            </div>
            <img width="500" src="./images/hero.webp" />
        </div>
    </header>

    <!-- Features Section -->
    <section class="features-section text-center">
        <div class="container">
            <h2 class="mb-5">Why Choose Our Marketplace?</h2>
            <div class="row">
                <div class="col-md-4">
                    <i class="fas fa-briefcase fa-3x mb-3"></i>
                    <h4>High-Quality Freelancers</h4>
                    <p>We vet all our freelancers to ensure you get the best talent for your project.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-dollar-sign fa-3x mb-3"></i>
                    <h4>Affordable Pricing</h4>
                    <p>Our marketplace offers flexible pricing options to suit your budget.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-clock fa-3x mb-3"></i>
                    <h4>Timely Delivery</h4>
                    <p>Get your projects delivered on time with dedicated freelancers.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="cta-section">
        <div class="container">
            <h2>Ready to Start Your Project?</h2>
            <p class="lead">Join thousands of satisfied clients who have successfully completed their projects with our freelancers.</p>
            <a href="/User/JoinAs" class="btn btn-lg btn-success">Get Started Now</a>
        </div>
    </section>
</div>
