@{
    ViewData["Title"] = "Join as a Client or Freelancer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - FreelanceMarketPlace</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/css/JoinAs.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Join as a client or freelancer</h2>
                <form method="get" action="/User/SignUp">
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="option-card" id="clientOption">
                                <label>
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">&#128188;</span> <!-- Briefcase emoji -->
                                        <span>I'm a client, hiring for a project</span>
                                    </div>
                                    <input type="radio" name="role" value="client">
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="option-card" id="freelancerOption">
                                <label>
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">&#128187;</span> <!-- Laptop emoji -->
                                        <span>I'm a freelancer, looking for work</span>
                                    </div>
                                    <input type="radio" name="role" value="freelancer" checked>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <button type="submit" id="applyButton" class="btn btn-green btn-block">Apply as a Freelancer</button>
                    </div>
                    <div class="mt-3">
                        <p>Already have an account? <a href="/User/Login">Log In</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/JoinAs.js"></script>
</body>
</html>
