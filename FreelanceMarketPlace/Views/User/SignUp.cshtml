@model FreelanceMarketPlace.Models.Entities.Users

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Path to your layout file
    ViewData["Title"] = "Sign Up";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-success">Create Your Account</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form class="signup-form" method="post" action="/User/SignUp">
                <div class="row">
                    <div class="form-group mb-3 col-md-6">
                        <label asp-for="FirstName">First Name</label>
                        <input type="text" asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3 col-md-6">
                        <label asp-for="LastName">Last Name</label>
                        <input type="text" asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserEmail">Email</label>
                    <input type="email" asp-for="UserEmail" class="form-control" required />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserPassword">Password</label>
                    <input type="password" asp-for="UserPassword" class="form-control" required />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-block">Create Account</button>
                </div>

               
            </form>
        </div>
    </div>
</div>
