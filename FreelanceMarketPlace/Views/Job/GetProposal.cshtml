@{

    @using Humanizer
    ViewData["Title"] = "Proposal Details";
    var proposal = ViewData["proposal"] as FreelanceMarketPlace.Models.Entities.FreelancerProposals;
    string statusClass = proposal?.ProposalStatus switch
    {
        "not seen" => "text-info",
        "seen" => "text-secondary",
        "accepted" => "text-success",
        _ => "text-danger"
    };
}

<div class="container mt-4">
    <div class="row">
        <!-- Main Content Section -->
        <div class="col-md-8">
            <h1 class="mb-3 limited-text text-capitalize">@proposal?.ProposalDescription</h1>
            <p class="text-muted">Submitted @(@proposal?.CreatedOn.Humanize())</p>
            <hr />
            <p>@proposal?.ProposalDescription</p>
        </div>

        <!-- Sidebar Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Proposal Details</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-capitalize"><strong>Bid:</strong> $@proposal.ProposalBid</li>
                        <li class="list-group-item text-capitalize"><strong>Project Type:</strong> One-time project</li>
                        <li class="list-group-item text-capitalize">
                            <strong>Proposal Status:</strong>
                            <span class="@statusClass fw-bold">@proposal?.ProposalStatus</span>
                        </li>
                    </ul>
                </div>


            </div>


        </div>
        <div class="card mb-4">

            <div class="p-0 card-body">
                <h5 class="card-title">About The Freelancer</h5>
                <p class="text-secondary">Member since @proposal?.CreatedOn.Value.Year</p>
                <div class="d-flex gap-4">
                    <div class="mb-2">
                        <p class="fw-bold m-0 p-0">Pakistan</p>
                        <p class="m-0 p-0">Lahore</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
